    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ll_apple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen2"
        android:layout_marginTop="@dimen/dimen10"
