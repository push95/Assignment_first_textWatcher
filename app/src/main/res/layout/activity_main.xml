            android:paddingLeft="@dimen/dimen17"
            android:text="@string/with_fb"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/dimen8"
            android:fontFamily="@font/montserrat_regular"/>


    </RelativeLayout>

    <RelativeLayout
