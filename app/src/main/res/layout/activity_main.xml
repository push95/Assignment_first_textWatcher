    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".activity.FirstScreenActivity"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dimen6"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fit"
        android:gravity="center"
        android:textSize="@dimen/dimen17"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="@dimen/dimen10"
        android:fontFamily="@font/montserrat_medium"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/change"
        android:gravity="center"
        android:textSize="@dimen/dimen13"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="@dimen/dimen4"
        android:fontFamily="@font/montserrat_medium"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/create_account_text"
        android:gravity="center"
        android:textSize="@dimen/dimen9"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="@dimen/dimen8"
        android:fontFamily="@font/montserrat_regular"/>


    <RelativeLayout
        android:id="@+id/ll_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen14"
        android:padding="@dimen/dimen2"
        android:background="@drawable/draw_email">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/email_2"
            android:paddingLeft="30dp"
            android:layout_centerVertical="true"/>





        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:paddingLeft="@dimen/dimen17"
            android:text="@string/with_email"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/dimen9"
            android:fontFamily="@font/montserrat_regular"/>


    </RelativeLayout>

